{
  "name": "storyteller",
  "version": "0.1.0",
  "description": "Electron desktop app: node-based workflow + agent chat for AI storytelling.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"yarn dev:main\" \"yarn dev:renderer\" \"yarn dev:electron\"",
    "build:main": "tsc -p tsconfig.main.json",
    "dev:main": "tsc -p tsconfig.main.json -w",
    "dev:renderer": "vite --config renderer/vite.config.ts --host 127.0.0.1 --port 5173",
    "dev:electron": "wait-on tcp:5173 dist-main/main.js && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron . --dev",
    "build:renderer": "vite build --config renderer/vite.config.ts",
    "typecheck": "vue-tsc --noEmit -p renderer/tsconfig.json",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "yarn rebuild:native",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "39.2.7",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vue-tsc": "^2.1.0",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "@langchain/core": "^1.1.5",
    "@langchain/openai": "^1.2.0",
    "@vue-flow/background": "^1.3.0",
    "@vue-flow/controls": "^1.1.0",
    "@vue-flow/core": "^1.45.0",
    "better-sqlite3": "^12.5.0",
    "langchain": "^1.2.0",
    "pinia": "^2.2.0",
    "vue": "^3.5.0",
    "vue-advanced-chat": "^2.1.1",
    "zod": "^4.1.13"
  }
}